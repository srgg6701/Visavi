<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>default</name>
	<version>1.0</version>
	<creationDate>01.01.01</creationDate>
	<author>srgg6701</author>
	<authorEmail>srgg67@gmail.com</authorEmail>
	<copyright>Copyright (C) srgg6701</copyright>
	<license>GPL</license>
	<description>Universal template, 1-3 columns by default</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>params.ini</filename>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>breadcrumbs</position>
		<position>debug</position>
		<position>footer</position>
		<position>left</position>
		<position>message</position>
		<position>main</position>
		<position>right</position>
		<position>top</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_default.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_default.sys.ini</language>
	</languages>	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!--<field name="logoType" type="list" default="image" label="Logo type" description="Use Site Logo">
					<option value="image">Image</option>
					<option value="text">Text</option>
				</field>-->
				<field name="logoText" type="text" default="Default Template, see templateDetails.xml" size="50" label="Logo text" description="Default Template, see templateDetails.xml" />
				<field name="sloganText" type="text" default="Slogan, see templateDetails.xml" size="50" label="Slogan" description="Slogan of the site, see templateDetails.xml" />
			</fieldset>
		</fields>
	</config>
</extension>